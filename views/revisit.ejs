<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="theme-color" content="#000000" />
    <link
      rel="shortcut icon"
      href="https://cdn3.iconfinder.com/data/icons/virus-transmission-flat/48/Vaccine-512.png"
    />
    <link
      rel="apple-touch-icon"
      sizes="76x76"
      href="https://cdn3.iconfinder.com/data/icons/virus-transmission-flat/48/Vaccine-512.png"
    />
    <!-- Font Awesome Link -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css"
      integrity="sha512-+4zCK9k+qNFUR5X+cKL9EIR+ZOhtIloNl9GIKS57V1MyNsYpYcUrUeQc9vNfzsWfV28IaLL3i96P9sdNyeRssA=="
      crossorigin="anonymous"
    />
    <!-- Bootstrap 5 CSS only link -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1"
      crossorigin="anonymous"
    />
    <!-- Title -->
    <title>Revisit | VacciLog</title>
    <style>
      @import url('https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap');
      :root {
        font-size: 16px;
      }
      body {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: 'Poppins', sans-serif;
        scroll-behavior: smooth;
      }
      body::-webkit-scrollbar,
      nav::-webkit-scrollbar {
        width: 0.25rem;
      }
      body::-webkit-scrollbar-track,
      nav::-webkit-scrollbar-track {
        background: #1e1e24;
      }
      body::-webkit-scrollbar-thumb,
      nav::-webkit-scrollbar-thumb {
        background: #6649b8;
      }
      nav {
        width: 20vw;
        float: left;
        height: 100%;
        background: #222;
        position: fixed;
        z-index: 1;
        top: 0;
        left: 0;
        overflow-x: hidden;
      }
      .redLogo {
        color: red;
      }
      .nav-item {
        color: #818181;
        display: block;
        text-decoration: none;
      }
      .nav-item:hover,
      .active {
        color: #f1f1f1;
      }
      main {
        margin-left: 20vw;
        clear: both;
        position: relative;
      }
      .title {
        height: 20vh;
        min-height: 7rem;
      }
      footer {
        position: relative;
        margin-top: 2vh;
        padding: 3vh 0;
      }
    </style>
  </head>
  <body>
    <!-- NavBar Leftside-->
    <nav class="leftSide text-uppercase text-white fw-bold">
      <h3 class="Logo text-center fw-bold my-3">
        Vacci<span class="redLogo">Log</span>
      </h3>
      <hr />
      <div class="navs">
        <ul class="navlist list-unstyled ms-4">
          <li>
            <a href="/home" class="nav-item p-2">
              <i class="fas fa-home me-2"></i> Home
            </a>
          </li>
          <li>
            <a href="/dashboard" class="nav-item p-2"
              ><i class="fas fa-tv me-2"></i> Dashboard</a
            >
          </li>
          <li>
            <a href="/user" class="nav-item p-2">
              <i class="fas fa-user-cog me-2"></i> User Account</a
            >
          </li>
          <li>
            <a href="/new" class="nav-item p-2">
              <i class="fas fa-user-plus me-2"></i> New Pateint</a
            >
          </li>
          <li>
            <a href="#" class="nav-item p-2 active">
              <i class="fas fa-retweet me-2"></i> Revisit</a
            >
          </li>
        </ul>
      </div>
      <hr />
      <div class="lowerNav">
        <ul class="navlist list-unstyled ms-4">
          <li>
            <a href="#" class="nav-item p-2">
              <i class="fas fa-tools me-2"></i>Settings</a
            >
          </li>
          <li>
            <a href="#" class="nav-item p-2">
              <i class="fas fa-address-card me-2"></i>Contact Us</a
            >
          </li>
        </ul>
      </div>
      <hr />
      <div class="signout">
        <ul class="navlist list-unstyled ms-4">
          <li class="">
            <a href="/signOut" class="nav-item p-2"
              ><i class="fas fa-sign-out-alt me-2"></i>Signout</a
            >
          </li>
        </ul>
      </div>
    </nav>

    <!-- Rightside -->
    <main class="rightSide">
      <!-- Title -->
      <h1
        class="title display-2 align-middle py-3 fw-bold bg-info bg-gradient text-uppercase text-center text-white"
      >
        Patient Revisit
      </h1>

      <!-- Section Patient Details -->
      <section class="patientDetails px-5 py-3">
        <h1 class="text-center text-uppercase mb-3">Patient Details</h1>
        <div class="row g-3 patientData">
          <div class="col-md-5 position-relative">
            <label for="uid" class="me-2 fw-bold">Unique ID:</label>
            <label for="uidFromDB" id="uidfromDB"><%= pRecord.uid%></label>
          </div>
          <div class="col-md-7 position-relative">
            <label for="name" class="me-2 fw-bold">Name:</label>
            <label for="nameFromDB" id="patientNamefromDB"
              ><%= pRecord.name%></label
            >
          </div>

          <div class="col-md-3 position-relative">
            <label for="age" class="me-2 fw-bold">Age:</label>
            <label for="ageFromDB" id="agefromDB"><%= pRecord.age%></label>
          </div>

          <div class="col-md-4 position-relative">
            <label for="gender" class="me-2 fw-bold">Gender:</label>
            <label for="genderFromDB" id="genderfromDB"
              ><%= pRecord.gender%></label
            >
          </div>
          <div class="col-md-5 position-relative">
            <label for="phone" class="me-2 fw-bold">Phone Number:</label>
            <label for="phoneFromDB" id="phonefromDB"
              ><%= pRecord.phone%></label
            >
          </div>

          <div class="col-md-12 position-relative">
            <label for="dob" class="me-2 fw-bold">Date Of Birth:</label>
            <label for="dobFromDB" id="dobfromDB"
              ><%= pRecord.dateOfBirth%></label
            >
          </div>

          <div class="col-md-12 position-relative">
            <label for="address" class="me-2 fw-bold">Address:</label>
            <label for="addressFromDB" id="addressfromDB"
              ><%= pRecord.address%></label
            >
          </div>

          <div class="col-md-12 position-relative">
            <label for="firstRecord" class="me-2 fw-bold"
              >1st Record Date:</label
            >
            <label for="firstRecordFromDB" id="recordAddedfromDB"
              ><%= pRecord.recordAdded%></label
            >
          </div>
        </div>

        <!-- Verify Patient details -->
        <div class="verifyPateint mt-4">
        <label for="UniqueIDSearch" class="fw-bold ms-1"><i class="fas fa-user-check"></i> Verify Patient</label>
          <form
            action="/patient/verify"
            method="post"
            class="row g-3 needs-validation"
            novalidate
          >
            <div class="col-md-5 position-relative">
              <div class="input-group has-validation">
                <span
                  class="input-group-text"
                  id="validationTooltipPateintVerifyPrependSearch"
                  ><i class="fas fa-id-card-alt"></i
                ></span>
                <input
                  type="number"
                  class="form-control"
                  name="uid"
                  id="validationTooltipPateintVerifySearch"
                  aria-describedby="validationTooltipPateintVerifyPrependSearch"
                  placeholder="Enter Unique ID"
                  required
                />
                <div class="invalid-tooltip">
                  Please choose a valid Unique ID.
                </div>
                <input
                  type="number"
                  class="form-control"
                  name="patientCount"
                  id="validationTooltipPateintVerifySearch"
                  aria-describedby="validationTooltipPateintVerifyPrependSearch"
                  placeholder="Update Count"
                  required
                />
              </div>
            </div>
            <div class="col-md-1 position-relative">
              <button type="submit" class="btn btn-danger">Verify</button>
            </div>
            <small
              >*NB: Increase the value of <strong>Update Count</strong> if there
              is any data change after initial record. Default value is
              <strong>1</strong></small
            >
          </form>
        </div>
      </section>
      <hr />

      <!-- Vaccine Details Add -->
      <section class="vaccineAdd px-5 py-3">
        <h1 class="text-center text-uppercase mb-3">Vaccine Details</h1>

        <form
          method="POST"
          action="/vaccine/add"
          class="row g-3 needs-validation"
          novalidate
        >
          <div class="col-md-4 position-relative">
            <label for="validationTooltipUniqueID" class="form-label"
              >Unique ID</label
            >
            <div class="input-group has-validation">
              <span
                class="input-group-text"
                id="validationTooltipUniqueIDPrepend"
                ><i class="fas fa-id-card-alt"></i
              ></span>
              <input
                type="number"
                class="form-control"
                name="uid"
                id="validationTooltipUniqueID"
                aria-describedby="validationTooltipUniqueIDPrepend"
                required
              />
              <div class="invalid-tooltip">
                Please choose a valid Unique ID.
              </div>
            </div>
          </div>
          <div class="col-md-8 position-relative">
            <label for="validationTooltip01" class="form-label"
              >Vaccine name</label
            >
            <input
              type="text"
              class="form-control"
              name="vaccineName"
              id="validationTooltip01"
              required
            />
            <div class="invalid-tooltip">
              Please enter a valid vaccine name.
            </div>
          </div>

          <div class="col-md-3 position-relative">
            <label for="validationTooltip02" class="form-label"
              >Manufacturer</label
            >
            <input
              type="text"
              class="form-control"
              name="manufacturer"
              id="validationTooltip02"
              required
            />
            <div class="invalid-tooltip">
              Please enter a valid manufacturer name.
            </div>
          </div>
          <div class="col-md-3 position-relative">
            <label for="validationTooltipAge" class="form-label">Batch</label>
            <input
              type="text"
              class="form-control"
              name="batch"
              id="validationTooltipbatch"
              required
            />
            <div class="invalid-tooltip">Please choose a valid batch.</div>
          </div>
          <div class="col-md-3 position-relative">
            <label for="validationTooltipPhoneNumber" class="form-label"
              >Serial Number</label
            >
            <input
              type="number"
              class="form-control"
              name="slNo"
              id="validationTooltipserialNumber"
              required
            />
            <div class="invalid-tooltip">
              Please choose a valid serial number.
            </div>
          </div>
          <div class="col-md-3 position-relative">
            <label for="validationTooltipDob" class="form-label"
              >Manufacturing Date</label
            >
            <input
              type="date"
              class="form-control"
              name="mfd"
              id="validationTooltipMFD"
              required
            />
            <div class="invalid-tooltip">
              Please choose a valid manufacturing date.
            </div>
          </div>

          <div class="col-12 position-relative">
            <input
              class="form-check-input form-control me-2 p-1"
              type="checkbox"
              value=""
              required
            />
            <label class="form-check-label" for="reviewCheck">
              Review all entered data before submitting
            </label>
            <div class="invalid-tooltip">
              You must review before submitting.
            </div>
          </div>
          <div class="col-12 position-relative">
            <button class="btn btn-primary" type="submit">Add Vaccine</button>
          </div>
        </form>
      </section>
      <hr />

      <!-- Footer -->
      <footer>
        <div class="copyright text-center">
          Copyright &copy 2020 by
          <a href="#" class="text-decoration-none">Justin J</a>
        </div>
      </footer>
    </main>
  </body>
  <!-- Bootstrap 5 JavaScript Bundle with Popper -->
  <script
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW"
    crossorigin="anonymous"
  ></script>
  <!-- <script src="./javascripts/formValidation.js"></script> -->
  <script>
    // Example starter JavaScript for disabling form submissions if there are invalid fields
    (function () {
      'use strict';

      // Fetch all the forms we want to apply custom Bootstrap validation styles to
      var forms = document.querySelectorAll('.needs-validation');

      // Loop over them and prevent submission
      Array.prototype.slice.call(forms).forEach(function (form) {
        form.addEventListener(
          'submit',
          function (event) {
            if (!form.checkValidity()) {
              event.preventDefault();
              event.stopPropagation();
            }

            form.classList.add('was-validated');
          },
          false
        );
      });
    })();
  </script>
</html>
