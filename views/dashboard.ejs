      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1"
      crossorigin="anonymous"
    />
    <!-- Title -->
    <title>Dashboard | VacciLog</title>
    <style>
      @import url('https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap');
      :root {
        font-size: 16px;
      }
      body {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: 'Poppins', sans-serif;
        scroll-behavior: smooth;
      }
      body::-webkit-scrollbar,
      nav::-webkit-scrollbar {
        width: 0.25rem;
      }
      body::-webkit-scrollbar-track,
      nav::-webkit-scrollbar-track {
        background: #1e1e24;
      }
      body::-webkit-scrollbar-thumb,
      nav::-webkit-scrollbar-thumb {
        background: #6649b8;
      }
      nav {
        width: 20vw;
        float: left;
        height: 100%;
        background: #222;
        position: fixed;
        z-index: 1;
        top: 0;
        left: 0;
        overflow-x: hidden;
      }
      .redLogo {
        color: red;
      }
      .nav-item {
        color: #818181;
        display: block;
        text-decoration: none;
      }
      .nav-item:hover,
      .active {
        color: #f1f1f1;
      }
      main {
        margin-left: 20vw;
        clear: both;
        position: relative;
      }
      .title {
        height: 20vh;
        min-height: 7rem;
      }
      footer {
        position: relative;
        margin-top: 1rem;
        padding: 3vh 0;
      }
    </style>
  </head>
  <body>
    <!-- Navbar leftSide -->
    <nav for="leftSide" class="text-uppercase text-white fw-bold">
      <h3 for="Logo" class="text-center fw-bold my-3">
        Vacci<span class="redLogo">Log</span>
      </h3>
      <hr />
      <div for="Navbar">
        <ul for="navlist" class="list-unstyled ms-4">
          <li>
            <a href="/home" class="nav-item p-2">
              <i class="fas fa-home me-2"></i> Home
            </a>
          </li>
          <li>
            <a href="#" class="nav-item p-2 active"
              ><i class="fas fa-tv me-2"></i> Dashboard</a
            >
          </li>
          <li>
            <a href="/user" class="nav-item p-2">
              <i class="fas fa-user-cog me-2"></i> User Account</a
            >
          </li>
          <li>
            <a href="/new" class="nav-item p-2">
              <i class="fas fa-user-plus me-2"></i> New Pateint</a
            >
          </li>
          <!-- <li>
            <a href="#" class="nav-item p-2">
              <i class="fas fa-retweet me-2"></i> Revisit</a
            >
          </li> -->
        </ul>
      </div>
      <hr />
      <div class="lowerNav">
        <ul class="navlist list-unstyled ms-4">
          <li>
            <a href="#" class="nav-item p-2">
              <i class="fas fa-tools me-2"></i>Settings</a
            >
          </li>
          <li>
            <a href="#" class="nav-item p-2">
              <i class="fas fa-address-card me-2"></i>Contact Us</a
            >
          </li>
        </ul>
      </div>
      <hr />
      <div class="signout">
        <ul class="navlist list-unstyled ms-4">
          <li class="">
            <a href="/signOut" class="nav-item p-2"
              ><i class="fas fa-sign-out-alt me-2"></i>Signout</a
            >
          </li>
        </ul>
      </div>
    </nav>

    <!-- Main rightside -->
    <main for="rightSide">
      <!-- Title -->
      <h1
        class="title display-2 align-middle py-3 fw-bold bg-primary bg-gradient text-uppercase text-center text-white"
      >
        Dashboard
      </h1>

      <!-- Section New Patient -->
      <section for="patientDetailsBtn" class="px-5 py-3">
        <label for="UniqueIDSearch" class="fw-bold"><i class="fas fa-search"></i> Search Patient Details</label>
        <form
          action="/patient/get"
          method="post"
          class="row g-3 needs-validation"
          novalidate
        >
          <div class="col-md-6 position-relative">
            <div class="input-group has-validation">
              <span
                class="input-group-text"
                id="validationTooltipUniqueIDPrependSearch"
                ><i class="fas fa-id-card-alt"></i
              ></span>
              <input
                type="number"
                class="form-control"
                name="uid"
                id="validationTooltipUniqueIDSearch"
                aria-describedby="validationTooltipUniqueIDPrependSearch"
                placeholder="Enter Unique ID"
                required
              />
              <div class="invalid-tooltip">
                Please choose a valid Unique ID.
              </div>
            </div>
          </div>
          <div class="col-md-1 position-relative">
            <button type="submit" class="btn btn-success">Search</button>
          </div>
        </form>
      </section>
      <hr />

      <!-- Section Verify Patient -->
      <section for="patientVerify" class="px-5 py-3">
        <label for="UniqueIDSearch" class="fw-bold"><i class="fas fa-user-check"></i> Verify Patient</label>
        <form
          action="/patient/verify"
          method="post"
          class="row g-3 needs-validation"
          novalidate
        >
          <div class="col-md-6 position-relative">
            <div class="input-group has-validation">
              <span
                class="input-group-text"
                id="validationTooltipPateintVerifyPrependSearch"
                ><i class="fas fa-id-card-alt"></i
              ></span>
              <input
                type="number"
                class="form-control"
                name="uid"
                id="validationTooltipPateintVerifySearch"
                aria-describedby="validationTooltipPateintVerifyPrependSearch"
                placeholder="Enter Unique ID"
                required
              />
              <div class="invalid-tooltip">
                Please choose a valid Unique ID.
              </div>
              <input
                type="number"
                class="form-control"
                name="patientCount"
                id="validationTooltipPateintVerifySearch"
                aria-describedby="validationTooltipPateintVerifyPrependSearch"
                placeholder="Update Count"
                required
              />
            </div>
          </div>
          <div class="col-md-1 position-relative">
            <button type="submit" class="btn btn-danger">Verify</button>
          </div>
          <small
            >*NB: Increase the value of <strong>Update Count</strong> if there
            is any data change after initial record. Default value is
            <strong>1</strong></small
          >
        </form>
      </section>
      <hr />

      <!-- Section Check Vaccine -->
      <section for="NewVaccineSearch" class="px-5 py-3">
        <label for="UniqueIDSearch" class="fw-bold"><i class="fas fa-book-medical"></i> Check Vaccine Details</label>
      <form
          action="/vaccine/get"
          method="post"
          class="row g-3 needs-validation"
          novalidate
        >
          <div class="col-md-6 position-relative">
            <div class="input-group has-validation">
              <span
                class="input-group-text"
                id="validationTooltipUniqueIDPrependSearch"
                ><i class="fas fa-id-card-alt"></i
              ></span>
              <input
                type="number"
                class="form-control"
                name="uid"
                id="validationTooltipUniqueIDSearch"
                aria-describedby="validationTooltipUniqueIDPrependSearch"
                placeholder="Enter Unique ID"
                required
              />
              <div class="invalid-tooltip">
                Please choose a valid Unique ID.
              </div>
            </div>
          </div>
          <div class="col-md-1 position-relative">
            <button type="submit" class="btn btn-primary">Check</button>
          </div>
        </form>
      </section>
      <hr>

      <!-- Section Verify Vaccine -->
      <section for="VerifyVaccine" class="px-5 py-3">
        <label for="UniqueIDSearch" class="fw-bold"><i class="fas fa-notes-medical"></i> Verify Vaccine</label>
        <form
          action="/vaccine/verify"
          method="post"
          class="row g-3 needs-validation"
          novalidate
        >
          <div class="col-md-6 position-relative">
            <div class="input-group has-validation">
              <span
                class="input-group-text"
                id="validationTooltipVaccineVerifyPrependSearch"
                ><i class="fas fa-id-card-alt"></i
              ></span>
              <input
                type="number"
                class="form-control"
                name="uid"
                id="validationTooltipVaccineVerifySearch"
                aria-describedby="validationTooltipVaccineVerifyPrependSearch"
                placeholder="Enter Unique ID"
                required
              />
              <div class="invalid-tooltip">
                Please choose a valid Unique ID.
              </div>
              <input
                type="number"
                class="form-control"
                name="vaccineCount"
                id="validationTooltipVaccineVerifySearch"
                aria-describedby="validationTooltipVaccineVerifyPrependSearch"
                placeholder="Update Count"
                required
              />
            </div>
          </div>
          <div class="col-md-1 position-relative">
            <button type="submit" class="btn btn-danger">Verify</button>
          </div>
          <small
            >*NB: Increase the value of <strong>Update Count</strong> if there
            is any data change after initial record. Default value is
            <strong>1</strong></small
          >
        </form>
      </section>

      <!-- Footer -->
      <footer>
        <div for="copyright" class="text-center">
          Copyright &copy 2020 by
          <a href="#" class="text-decoration-none">Justin J</a>
        </div>
      </footer>
    </main>
  </body>
  <!-- Bootstrap 5 JavaScript Bundle with Popper -->
  <script
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW"
    crossorigin="anonymous"
  ></script>
  <!-- <script src="./javascripts/formValidation.js"></script> -->
  <script>
    // Example starter JavaScript for disabling form submissions if there are invalid fields
    (function () {
      'use strict';

      // Fetch all the forms we want to apply custom Bootstrap validation styles to
      var forms = document.querySelectorAll('.needs-validation');

      // Loop over them and prevent submission
      Array.prototype.slice.call(forms).forEach(function (form) {
        form.addEventListener(
          'submit',
          function (event) {
            if (!form.checkValidity()) {
              event.preventDefault();
              event.stopPropagation();
            }

            form.classList.add('was-validated');
          },
          false
        );
      });
    })();
  </script>
</html>
