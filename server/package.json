{
  "name": "vaccination-logger-server",
  "version": "2.1.0",
  "description": "server of vaccination logger blockchain dapp",
  "private": true,
  "type": "module",
  "license": "MIT",
  "author": "Justin J Daniel",
  "repository": {
    "directory": "https://github.com/Justinjdaniel/Vacci-Log",
    "type": "git",
    "url": "https://github.com/Justinjdaniel/Vacci-Log.git"
  },
  "keywords": [
    "Blockchain, EVM, EthersJs, Vaccine, Dapp"
  ],
  "engines": {
    "node": ">=16.x.x"
  },
  "scripts": {
    "start": "node ./bin/server",
    "dev": "DEBUG=server:* nodemon start",
    "deploy": "npx hardhat run ./scripts/deploy.cjs --network mumbai",
    "deploy:local": "sh ./scripts/deploy-local.sh",
    "test": "npx hardhat test",
    "format-lint": "prettier --write . && eslint .",
    "check-all": "prettier --check . && eslint --fix-dry-run .",
    "check-all:cache": "prettier --check . --cache-location .prettier-cache && eslint --fix-dry-run . --cache"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "debug": "^4.3.4",
    "dotenv": "^16.3.1",
    "ethers": "^6.9.0",
    "express": "^4.18.2",
    "http-status": "^1.7.3",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.2",
    "morgan": "^1.10.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "validator": "^13.11.0"
  },
  "devDependencies": {
    "@babel/plugin-syntax-import-assertions": "^7.23.3",
    "@nomicfoundation/hardhat-ethers": "^3.0.5",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "chai": "^4.3.10",
    "concurrently": "^8.2.2",
    "eslint": "^8.54.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-jest": "^24.0.1",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-security": "^1.7.1",
    "hardhat": "^2.18.1",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.3",
    "supertest": "^6.3.3"
  },
  "imports": {
    "#root/*": "./src/*",
    "#config/*": "./src/config/*",
    "#controllers/*": "./src/controllers/*",
    "#db/*": "./src/db/*",
    "#logs/*": "./src/logs/*",
    "#middleware/*": "./src/middleware/*",
    "#models/*": "./src/models/*",
    "#routes/*": "./src/routes/*",
    "#services/*": "./src/services/*",
    "#utils/*": "./src/utils/*"
  },
  "lint-staged": {
    "*.{js,json,md}": [
      "prettier --write",
      "eslint"
    ]
  },
  "nodemonConfig": {
    "ignore": [
      "public/*"
    ]
  }
}
