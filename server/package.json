{
  "name": "vacci-log-server",
  "description": "Server of Vacci Log Blockchain Dapp",
  "version": "2.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "start": "node ./bin/server",
    "dev": "DEBUG=server:* nodemon start",
    "test": "npx truffle test",
    "test:hardhat": "npx hardhat test ./test/*.hardhat.test.js",
