  },
  "license": "MIT",
  "author": "Justin J Daniel",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cookie-parser": "~1.4.4",
    "cors": "^2.8.5",
    "debug": "~2.6.9",
    "dotenv": "^16.0.3",
    "ethers": "^5.7.1",
    "express": "~4.16.1",
    "http-status": "^1.6.2",
    "joi": "^17.8.4",
    "jsonwebtoken": "^9.0.0",
    "mongoose": "^7.0.0",
    "morgan": "~1.9.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^4.6.2",
    "validator": "^13.9.0"
  },
  "devDependencies": {
